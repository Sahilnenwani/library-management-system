@model IEnumerable<libraryproject.BookReturnTable>

@{
    ViewBag.Title = "Book Return Manage";
    Layout = "~/Views/Shared/sharedview.cshtml";
}





<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Return Table</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th style="color:white">ID</th>
                        <th style="color:white; text-align:center">Issue Date</th>
                        <th style="color:white; text-align:center">Return Date</th>
                        <th style="color:white; text-align:center">Current Date</th>
                        <th style="color:white">Book Title</th>
                        <th style="color:white">Student Name</th>
                        <th  sstyle="text-align:center">
                            <a href="@Url.Action("Create","BookReturnTables")" class="btn btn-primary">
                                <i class="fas fa-plus"></i> &nbsp; Create New
                            </a>
                        </th>                    </tr>
                </thead>

                <tbody>


                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.BookReturnID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IssueDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ReturnDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CurrentDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.BookTable.BookTitle)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.StudentTable.StudentName)
                        </td>
                        <td style="text-align:center">

                            <a href="@Url.Action("Edit", "BookReturnTables", new { id = item.BookReturnID })" class="btn btn-primary mx-2">
                                <i class="fas fa-edit"></i>

                            </a>
                            <a href="@Url.Action("Delete", "BookReturnTables", new { id = item.BookReturnID })" class="btn btn-danger mx-2" onclick=" confirm('Are you sure to delete this record')">
                                <i class="fas fa-trash-alt"></i>

                            </a>


                        </td>
                    </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>













