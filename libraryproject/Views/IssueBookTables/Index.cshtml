@model IEnumerable<libraryproject.IssueBookTable>

@{
    ViewBag.Title = "Issue Book";
    Layout = "~/Views/Shared/sharedview.cshtml";
}




<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Issue Table</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>

                        <th style="color:white">Issue ID</th>
                        <th style="color:white">Issue Copies</th>
                        <th style="color:white">Issue Date</th>
                        <th style="color:white">Return Date</th>
                        <th style="color:white">Status</th>
                        <th style="color:white">Book Title</th>
                        <th style="color:white">Student Name</th>
                        <th style="color:white">Book Type</th>
                        <th style="text-align:center">
                            <a href="@Url.Action("Create","IssueBookTables")" class="btn btn-primary">
                                <i class="fas fa-plus"></i> &nbsp; Issue Book
                            </a>
                        </th>
                    </tr>
                </thead>

                <tbody>


                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.IssueBookID)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.IssueCopies)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IssueDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ReturnDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Status)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.BookTable.BookTitle)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.StudentTable.StudentName)

                        </td>
                        <td>
                            @if (item.StudentTable.StuentTypeID == 1)
                             {
                                <h3>Book</h3>
                             }
                             else
                             {
                                <h3>Ebook</h3>
                                }


                            

                        </td>
                        <td style="text-align:center">

                            <a href="@Url.Action("Edit","IssueBookTables", new { id = item.IssueBookID })" class="btn btn-primary mx-2">
                                <i class="fas fa-edit"></i>

                            </a>
                            <a href="@Url.Action("Delete","IssueBookTables", new { id = item.IssueBookID })" class="btn btn-danger mx-2" onclick=" confirm('Are you sure to delete this record')">
                                <i class="fas fa-trash-alt"></i>

                            </a>


                        </td>

                    </tr>
                    }



                </tbody>
            </table>
        </div>
    </div>
</div>







