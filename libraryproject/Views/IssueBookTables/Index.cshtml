@model IEnumerable<libraryproject.IssueBookTable>

@{
    ViewBag.Title = "Issue Book";
    Layout = "~/Views/Shared/sharedview.cshtml";
}







<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Return Table</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Issue ID</th>
                        <th>Issue Copies</th>
                        <th>Return Date</th>
                        <th>Status</th>
                        <th>Book Title</th>
                        <th>Student Name/th>
                        <th>      @Html.ActionLink("Create New", "Create")</th>
                    </tr>
                </thead>

                <tbody>



                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.IssueBookID)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.IssueCopies)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IssueDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ReturnDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Status)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.BookTable.BookTitle)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.StudentTable.StudentName)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.IssueBookID }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.IssueBookID })
                        </td>
                    </tr>
                    }


                </tbody>
            </table>
        </div>
    </div>
</div>


























